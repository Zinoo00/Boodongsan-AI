# Korean Real Estate RAG AI Chatbot - Environment Configuration
# Copy this file to .env and update with your actual values

# Application
APP_NAME="Korean Real Estate RAG AI Chatbot"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG="true"
SECRET_KEY="your-super-secret-key-here-minimum-32-characters-long"

# Security - IMPORTANT: Set these in production
JWT_SECRET_KEY="your-jwt-secret-key-here-minimum-32-characters-long"
JWT_REFRESH_SECRET_KEY="your-jwt-refresh-secret-key-here-minimum-32-characters-long"
ALLOWED_HOSTS="localhost,127.0.0.1,yourdomain.com,*.yourdomain.com"

# Server Configuration - Uvicorn (per architecture)
HOST="0.0.0.0"
PORT="8000"
WORKERS="1"
RELOAD="true"
LOG_LEVEL="INFO"
ASGI_SERVER="uvicorn"  # uvicorn (recommended per architecture) or granian

# Database - Supabase PostgreSQL (per architecture)
SUPABASE_URL="https://your-project-id.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"
# Optional: Direct PostgreSQL connection URL (overrides Supabase if set)
DATABASE_URL=""

# Redis Cache (per architecture)
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""
CACHE_TTL="3600"

# Vector Database - Chromadb (Primary per architecture)
CHROMADB_HOST="localhost"
CHROMADB_PORT="8000"
CHROMADB_COLLECTION_NAME="korean_real_estate"

# Vector Database - Qdrant (Optional/Legacy support)
QDRANT_URL=""  # Optional: https://your-cluster.qdrant.tech
QDRANT_API_KEY=""  # Optional
QDRANT_COLLECTION_NAME="korean_real_estate"
VECTOR_SIZE="768"

# AI Services - AWS Bedrock (per architecture)
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-east-1"
BEDROCK_MODEL_ID="anthropic.claude-3-sonnet-20240229-v1:0"
BEDROCK_EMBEDDING_MODEL_ID="amazon.titan-embed-text-v1"

# AI Services - Cloudflare Workers AI (per architecture)
CLOUDFLARE_ACCOUNT_ID="your-32-character-account-id"
CLOUDFLARE_API_TOKEN="your-cloudflare-api-token"
CLOUDFLARE_MODEL_NAME="@cf/meta/llama-2-7b-chat-int8"

# Korean Real Estate APIs
MOLIT_API_KEY="your-molit-api-key"  # Required: 국토교통부 API
HUG_API_KEY="your-hug-api-key"     # Optional: 주택도시보증공사 API
HF_API_KEY="your-hf-api-key"       # Optional: 주택금융공사 API

# Performance Configuration
MAX_WORKERS="4"
WORKER_TIMEOUT="120"
DB_POOL_SIZE="10"
DB_MAX_OVERFLOW="20"
MAX_SEARCH_RESULTS="10"
SIMILARITY_THRESHOLD="0.7"
MAX_CONTEXT_LENGTH="4000"
RESPONSE_MAX_TOKENS="1000"

# Data Collection
DATA_UPDATE_INTERVAL_HOURS="24"
MAX_CONCURRENT_REQUESTS="10"
REQUEST_TIMEOUT_SECONDS="30"

# Monitoring
ENABLE_METRICS="true"
METRICS_PORT="9090"
LOG_FILE_PATH=""  # Optional: path to log file

# File Storage
UPLOAD_MAX_SIZE="10485760"  # 10MB in bytes
ALLOWED_FILE_TYPES="csv,xlsx,json"

# CORS Configuration
BACKEND_CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000,https://yourdomain.com"